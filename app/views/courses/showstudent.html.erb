
<div class="container-fluid">
  <div class="row">
    <div class="col-sm-10">
      <div class="panel panel-primary">
        <div class="panel-heading">
          <h3 class="panel-title">选课学生</h3>
        </div>
        <div class="panel-body" style="min-height: 450px">
          <table class="table table-striped table-hover">
            <thead>
            <tr>总的选课人数为:<%= @course_num%><tr>
            <tr>
              <th>序号</th>
              <th>姓名</th>
              <th>学号</th>
              <th>邮箱</th>
              <th>专业</th>
              <th>培养单位</th>
            </tr>
            </thead>
   
            <tbody>
            <li hidden=<%= num=0%> > </li>
            <% @course_student.each do |student|%>
          
            <tr>
            	<td><%= num=num+1%></td>
          		<td><%= student.name%></td>
          		<td><%= student.num%></td>
          		<td><%= student.email%></td>
          		<td><%= student.major%></td>
          		<td><%= student.department%></td>							
          	</tr>
          	<% end%>

        																																															

            </tbody>
          </table>

        </div>
      </div>
    </div>
  </div>
</div> 
																																										