
<div class="container-fluid">
  <div class="row">
    <div class="col-sm-2">
      <%= render "shared/sidenav" %>

    </div>
    <div class="col-sm-10">
      <div class="panel panel-primary">
        <div class="panel-heading">
          <h3 class="panel-title">选修课程</h3>
        </div>
        <div class="panel-body" style="min-height: 450px">
          <table class="table table-striped table-hover">
            <thead>

            <tr>
              <th>课程编号</th>
              <th>课程名称</th>
              <th>课时/学分</th>
              <th>限选</th>
              <th>已选</th>
              <th>课程属性</th>
              <th>授课方式</th>
              <th>考试方式</th>
              <th>主讲教师</th>
              <th>是否为学位课</th>

            </tr>
            </thead>
            <tbody>
              
            <% @course.each do |course| %>
                <tr>

                  <td><%= i=course.course_code %></td>
                <!--   <td><input id="checkbox1" type="checkbox" name="degree course" value ="true"/>是</td> -->
                  <td><%= link_to course.name,describe_course_path(course)%></td>
                  <td><%= course.credit %></td>
                  <td><%= course.limit_num %></td>
                  <td><%= course.student_num %></td>
                  <td><%= course.course_type %></td>
                  <td><%= course.teaching_type %></td>
                  <td><%= course.exam_type %></td>
                  <td><%= course.teacher.name %></td>
                  <td><input id="checkbox1" type="checkbox" name="degree course" value ="true"/>是</td>
                  <input type="hidden" id=<%= course.id.to_i%> value=<%= course.id.to_i%> /> 
                  <td><input id="button1" type="button" class="btn-sm btn-info" value="加入课程" onclick = "ci(<%= course.id.to_i%>)"/></td> 
              <!--   <td><%= link_to "加入课程", select_course_path(course), class: 'btn-sm btn-info' %></td>  -->

<!-- 
       #--------------------By xzh
                  <td>
                      <%= form_tag(select_course_path(course),method:"post") do |f| %>
                          &nbsp&nbsp&nbsp&nbsp&nbsp
                          <%= check_box_tag(:dc) %> </td>
                  <td>
                          <%= submit_tag"加入课程",class: 'btn btn-xs btn-primary',
                              :style=>"font-size:15px;"%>
                          <% end %>
                  </td>
      #---------------------------------- -->
                    </tr>
            <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
 <script type="text/javascript">
  flag = false;
  function ci(x){
    var InputNum=document.getElementsByTagName("input")
        for (var i=0;i<InputNum.length;i++){
          if(InputNum[i].checked)
            flag=true;
    var course= document.getElementById(x).value;
  window.location.href= "http://localhost:3000/courses/"+course+"/select?flag="+flag;
    }
}
</script> 

